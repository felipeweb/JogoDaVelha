<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".MainActivity">
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/nome"
			android:layout_column="0"
			android:layout_row="0"/>

	<TextView
			android:id="@+id/nomeDoJogador"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:layout_row="0"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/numeroDePartidas"
			android:layout_column="0"
			android:layout_row="1"/>

	<TextView
			android:id="@+id/numeroPartidas"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:layout_row="1"/>

	<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				tools:context=".MainActivity"
				android:layout_column="0"
				android:layout_row="2">
		<Button
				android:id="@+id/btnJogo00"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_row="0"/>

		<Button
				android:id="@+id/btnJogo01"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="0"/>

		<Button
				android:id="@+id/btnJogo02"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_row="0"/>

		<Button
				android:id="@+id/btnJogo10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_row="1"/>

		<Button
				android:id="@+id/btnJogo11"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="1"/>

		<Button
				android:id="@+id/btnJogo12"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_row="1"/>

		<Button
				android:id="@+id/btnJogo20"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_row="2"/>

		<Button
				android:id="@+id/btnJogo21"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="2"/>

		<Button
				android:id="@+id/btnJogo22"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="2"
				android:layout_row="2"/>
	</GridLayout>
</GridLayout>
